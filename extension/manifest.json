{
  "manifest_version": 3,
  "name": "ScheduleSync",
  "version": "1.0.0",
  "description": "Smart scheduling made easy - connect your calendars and manage meetings",
  "permissions": ["identity", "storage", "tabs"],
  "host_permissions": [
    "https://schedulesync-production.up.railway.app/*",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*",
    "https://login.microsoftonline.com/*",
    "https://graph.microsoft.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": { "service_worker": "background.js" }
}
